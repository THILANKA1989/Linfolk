@model LoginViewModel 
@{
    ViewBag.Title = "Login - Linfolk";
}
<h2 class="text-center">Contact</h2>
@section scripts{
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="rext-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="rext-warning"></span>
            </div>
            <div class="form-group">
                <input asp-for="RememberMe" type="checkbox" class="form-control checkbox-inline" />
                <label asp-for="RememberMe">Remember Me</label>
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Login" />
            </div>
            <div class="form-group">
                <a href="Account/Register">Register</a>
            </div>
        </form>
    </div>
</div>