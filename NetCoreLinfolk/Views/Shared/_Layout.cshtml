    <![endif]-->
    <link rel="shortcut icon" type="image/x-icon" href="favicon.png">
</head>
<body>
    <!-- header section -->
    <header>
        <!-- navbar bottom -->
        <nav class="navbar navbar-default navbar-default2 navbar-fixed-top" id="navbarbottom" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--  <a class="navbar-brand" href="index.php"></a> -->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                <span class="logo-fonts"> LinFolk</span>
                <ul class="nav navbar-nav pull-right" id="bottomlist">
                    <li id="inactive"><a asp-controller="App" asp-action="Index" class="active">Home</a></li>
                    <li id="inactive">
                        <a asp-controller="Categories" asp-action="Index">Categories</a>
                        <ul id="subcat">
                            @*@foreach (var c in Model)
                            {
                                <li>
                                    @c.CategoryName
                                </li>
                            }*@
                        </ul>
                    </li>
                    <li id="inactive"><a asp-controller="App" asp-action="Project">Projects</a></li>
                    <li id="inactive"><a href="index.html#contactus">Skills</a></li>
                    <li id="inactive"><a href="index.html#desc">LinFolk Main</a></li>
                    <li id="inactive"><a asp-controller="App" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- header section -->
    <!-- cover section -->
    <div class="wrap">
        @RenderBody()
    </div>
    <!-- footer -->
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/application.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            numberMenus = parseFloat($('#toplist').children().length);

            menuWidth = parseFloat($('#toplist').innerWidth()) / numberMenus;
            console.log(menuWidth);
            $('#toplist').children().css({ 'width': menuWidth - 3 + 'px' });
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>